<Window x:Class="UDP_Socket_stone_scissors_paper.ConnectToPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDP_Socket_stone_scissors_paper"
        mc:Ignorable="d"
        Title="ConnectToPlayer" Height="200" Width="205">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Margin="5" Grid.Row="0">Local port:</TextBlock>
        <TextBox Name="LocalPort" Margin="5" Grid.Row="1">8081</TextBox>
        <TextBlock Margin="5" Grid.Row="2">Remote port:</TextBlock>
        <TextBox Name="RemotePort" Margin="5" Grid.Row="3">8082</TextBox>
        <Button Margin="0,0,0,20" Height="20" Width="100" Grid.Row="4" Click="Button_Click">Connect</Button>
    </Grid>
</Window>
